<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    <form class="form-add" action="/car" method="post">
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Номер</label>
        <input type="plate_number" class="form-control form-control-lg" name="plate_number" placeholder="AA9999BB">
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Модель</label>
        <select type="car_model_id" name="car_model_id" class="form-select form-select-lg" aria-label="Вибір моделі">
          {{#each car_models}}
            <option value={{car_model_id}}>{{car_model_id}} {{model_name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Стан</label>
        <input type="condition" class="form-control form-control-lg" name="condition" placeholder="Good">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Ціна за день</label>
        <input type="price_per_day" class="form-control form-control-lg" name="price_per_day" placeholder="42">
        </div>
        <div class="form-check m-3 d-flex justify-content-center">
          <input class="form-check-input" type="checkbox" name="available" value="" id="flexCheckChecked" checked>
            <label class="form-check-label mx-1" for="flexCheckChecked"> Доступне</label>
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Підтвердити</button>
        </div>
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
