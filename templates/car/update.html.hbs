<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <form action="/car/{{plate_number}}" method="post" class="form-add">
        <input type="hidden" name="_method" value="PUT">
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Модель</label>
        <select type="car_model_id" name="car_model_id" class="form-select form-select-lg" aria-label="Select Car Model">
          {{/with}}
          {{#each car_models}}
            <option {{#if (eq car_model_id ../data.car_model_id)}}selected{{/if}} value={{car_model_id}}>
                {{car_model_id}} {{model_name}}
            </option>
          {{/each}}
          {{#with data}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Стан</label>
        <input type="condition" class="form-control form-control-lg" name="condition" value="{{condition}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Ціна за день</label>
        <input type="price_per_day" class="form-control form-control-lg" name="price_per_day" value="{{price_per_day}}">
        </div>
        <div class="form-check m-3 d-flex justify-content-center">
          <input class="form-check-input" type="checkbox" name="available" id="flexCheckChecked" {{#if available}}checked{{/if}}>
            <label class="form-check-label mx-1" for="flexCheckChecked"> Доступне</label>
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Підтвердити</button>
        </div>
        {{/with}}
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
