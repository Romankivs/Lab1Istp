<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    <form class="form-add" action="/car_model" method="post">
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Виробник</label>
        <select type="manufacturer_id" name="manufacturer_id" class="form-select form-select-lg" aria-label="Виберіть Виробника">
          {{#each manufacturers}}
            <option value={{manufacturer_id}}>{{manufacturer_id}} {{name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Назва моделі</label>
        <input type="model_name" class="form-control form-control-lg" name="model_name" placeholder="A8">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Рік випуску</label>
        <input type="release_year" class="form-control form-control-lg" name="release_year" placeholder="1999">
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Пітвердити</button>
        </div>
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
