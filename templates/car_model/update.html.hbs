<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <form action="/car_model/{{car_model_id}}" method="post" class="form-add">
        <input type="hidden" name="_method" value="PUT">
        <div class="m-3">
        <label for="Input0" class="form-label d-flex justify-content-center">ID</label>
        <input readonly type="id" class="form-control form-control-lg" name="id" value="{{car_model_id}}">
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Model Name</label>
        <input type="model_name" class="form-control form-control-lg" name="model_name" value="{{model_name}}">
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Manufacturer</label>
        <select type="manufacturer_id" name="manufacturer_id" class="form-select form-select-lg" aria-label="Select Manufacturer">
          {{/with}}
          {{#each manufacturers}}
            <option {{#if (eq manufacturer_id ../data.manufacturer_id)}}selected{{/if}} value={{manufacturer_id}}>
                {{manufacturer_id}} {{name}}
            </option>
          {{/each}}
          {{#with data}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Release year</label>
        <input type="release_year" class="form-control form-control-lg" name="release_year" value="{{release_year}}">
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        {{/with}}
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
