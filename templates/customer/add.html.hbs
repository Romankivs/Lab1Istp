<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    <form class="form-add" action="/customer" method="post">
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Driver License Id</label>
        <input type="driver_license_id" class="form-control form-control-lg" name="driver_license_id" placeholder="1111111">
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">First Name</label>
        <input type="first_name" class="form-control form-control-lg" name="first_name" placeholder="John">
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Last Name</label>
        <input type="last_name" class="form-control form-control-lg" name="last_name" placeholder="Doe">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Birth Date</label>
        <input type="birth_date" class="form-control form-control-lg" name="birth_date" placeholder="2000-11-30">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Email</label>
        <input type="email" class="form-control form-control-lg" name="email" placeholder="example@gmail.com">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Phone Number</label>
        <input type="phone_number" class="form-control form-control-lg" name="phone_number" placeholder="0999999999">
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
