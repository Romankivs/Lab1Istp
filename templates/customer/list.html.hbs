<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Driver License Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Birth Date</th>
        <th scope="col">Email</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each entities}}
            <tr>
                <th scope="row">{{driver_license_id}}</th>
                <td>{{first_name}}</a></td>
                <td>{{last_name}}</td>
                <td>{{birth_date}}</td>
                <td>{{email}}</td>
                <td>{{phone_number}}</td>
                <td>
                    <a href="/customer/{{driver_license_id}}" class="btn btn-primary btn-sm" title="Show Info">Info</a>
                    <a href="/customer/update/{{driver_license_id}}" title="Edit" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/customer/{{driver_license_id}}" method="post" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-primary btn-sm" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="m-2 d-flex justify-content-center">
        <a href="/customer/add" class="btn btn-primary">Add</a>
    </div>
    {{/with}}

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

