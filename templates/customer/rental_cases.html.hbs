<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Id Працівника</th>
        <th scope="col">Номер авто</th>
        <th scope="col">Номер водійського посвідчення</th>
        <th scope="col">Дата оренди</th>
        <th scope="col">Дата повернення</th>
        <th scope="col">Повернено</th>
        <th scope="col">Коментар</th>
        <th scope="col">Дії</th>
        </tr>
    </thead>
    <tbody>
        {{#each entities}}
            <tr>
                <th scope="row">{{rented_car_id}}</th>
                <td><a href="/data/{{staff_id}}">{{staff_id}}</a></td>
                <td><a href="/car/{{plate_number}}">{{plate_number}}</a></td>
                <td><a href="/customer/{{customer_id}}">{{customer_id}}</a></td>
                <td>{{rent_date}}</td>
                <td>{{return_date}}</td>
                <td>{{returned}}</td>
                <td>{{comment}}</td>
                <td>
                    <a href="/rental_cases/{{rented_car_id}}" class="btn btn-primary btn-sm" title="Show Info">Інфо</a>
                    <a href="/rental_cases/update/{{rented_car_id}}" title="Edit" class="btn btn-primary btn-sm">Змінити</a>
                    <form action="/rental_cases/{{rented_car_id}}" method="post" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-primary btn-sm" type="submit">Видалити</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="m-2 d-flex justify-content-center">
        <a href="/rental_cases/add" class="btn btn-primary">Додати</a>
    </div>
    {{/with}}

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

