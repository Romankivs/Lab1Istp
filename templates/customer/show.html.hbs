<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <div class="form-add">
<div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Номер водійського посвідчення</label>
        <input readonly type="driver_license_id" class="form-control form-control-lg" name="driver_license_id" value={{driver_license_id}}>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Ім'я</label>
        <input readonly type="first_name" class="form-control form-control-lg" name="first_name" value={{first_name}}>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Прізвище</label>
        <input readonly type="last_name" class="form-control form-control-lg" name="last_name" value={{last_name}}>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Дата народження</label>
        <input readonly type="birth_date" class="form-control form-control-lg" name="birth_date" value={{birth_date}}>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Пошта</label>
        <input readonly type="email" class="form-control form-control-lg" name="email" value={{email}}>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Номер телефону</label>
        <input readonly type="phone_number" class="form-control form-control-lg" name="phone_number" value={{phone_number}}>
        </div>
    </div>
    {{/with}}
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
