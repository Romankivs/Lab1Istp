<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/signin.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    <form class="form-signin" action="/login" method="post">
        <div class="m-3">
        <label for="exampleFormControlInput1" class="form-label d-flex justify-content-center">Email address</label>
        <input type="email" class="form-control form-control-lg" name="email" placeholder="name@example.com">
        </div>
        <div class="m-3 justify-content-center">
        <label for="exampleFormControlInput1" class="form-label d-flex justify-content-center">Password</label>
        <input type="password" class="form-control form-control-lg" name="password" placeholder="******">
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
        {{#if message}}
            <p class="text-center text-danger">{{message}}</p>
        {{/if}}
    </form>
    <div class="m-0 d-flex justify-content-center">
        <p>Don't have an account?</p><br/>
    </div>
    <div class="m-4 d-flex justify-content-center">
        <form method="get" action="/register">
            <button class="btn btn-primary" type="submit" href="/data/add">Register</button>
        </form>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
