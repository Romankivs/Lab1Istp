<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <div class="form-add">
        <div class="m-3">
        <label for="Input0" class="form-label d-flex justify-content-center">ID</label>
        <input readonly type="id" class="form-control form-control-lg" name="id" value="{{manufacturer_id}}">
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Назва</label>
        <input readonly type="name" class="form-control form-control-lg" name="name" value="{{name}}">
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Країна</label>
        <input readonly type="country" class="form-control form-control-lg" name="country" value="{{country_id}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Сайт</label>
        <input readonly type="website" class="form-control form-control-lg" name="website" value="{{website}}">
        </div>
    </div>
    {{/with}}
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
