<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    <form class="form-add" action="/rental_cases" method="post">
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Staff Id</label>
        <select type="staff_id" name="staff_id" class="form-select form-select-lg" aria-label="Select Staff Id">
          {{#each staff}}
            <option value={{staff_id}}>{{staff_id}} {{first_name}} {{last_name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Plate Number</label>
        <select type="plate_number" name="plate_number" class="form-select form-select-lg" aria-label="Select Car Plate Number">
          {{#each cars}}
            <option value={{plate_number}}>{{plate_number}}</option>
          {{/each}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Driver License Id</label>
        <select type="customer_id" name="customer_id" class="form-select form-select-lg" aria-label="Driver License Id">
          {{#each customers}}
            <option value={{driver_license_id}}>{{driver_license_id}} {{first_name}} {{last_name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Rent Date</label>
        <input type="rent_date" class="form-control form-control-lg" name="rent_date" placeholder="10-11-2022">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Return date</label>
        <input type="return_date" class="form-control form-control-lg" name="return_date" placeholder="10-04-2024">
        </div>
        <div class="form-check m-3 d-flex justify-content-center">
          <input class="form-check-input" type="checkbox" name="returned" value="" id="flexCheckChecked" checked>
            <label class="form-check-label mx-1" for="flexCheckChecked"> Returned</label>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Comment</label>
        <input type="comment" class="form-control form-control-lg" name="comment" placeholder="Nothing to say">
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
