<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    <div class="m-2 d-flex">
        <form action="/rental_cases/excel" enctype="multipart/form-data" method="post">
          <div class="form-group">
            <button class="btn btn-primary btn-sm" type="submit">Import from Excel</button>
            <input type="file" name="excel" class="form-control-file" id="excel">
          </div>
        </form>
    </div>
    <div class="m-2 d-flex">
        <form action="/rental_cases/excel">
            <button class="btn btn-primary btn-sm" type="submit">Export in Excel</button>
        </form>
    </div>
    {{#with data}}
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Staff Id</th>
        <th scope="col">Plate Number</th>
        <th scope="col">Driver License Id</th>
        <th scope="col">Rent Date</th>
        <th scope="col">Return Date</th>
        <th scope="col">Returned</th>
        <th scope="col">Comment</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each entities}}
            <tr>
                <th scope="row">{{rented_car_id}}</th>
                <td><a href="/data/{{staff_id}}">{{staff_id}}</a></td>
                <td><a href="/car/{{plate_number}}">{{plate_number}}</a></td>
                <td><a href="/customer/{{customer_id}}">{{customer_id}}</a></td>
                <td>{{rent_date}}</td>
                <td>{{return_date}}</td>
                <td>{{returned}}</td>
                <td>{{comment}}</td>
                <td>
                    <a href="/rental_cases/{{rented_car_id}}" class="btn btn-primary btn-sm" title="Show Info">Info</a>
                    <a href="/rental_cases/update/{{rented_car_id}}" title="Edit" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/rental_cases/{{rented_car_id}}" method="post" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-primary btn-sm" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="m-2 d-flex justify-content-center">
        <a href="/rental_cases/add" class="btn btn-primary">Add</a>
    </div>
    {{/with}}

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

