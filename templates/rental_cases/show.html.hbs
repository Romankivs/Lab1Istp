<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <div class="form-add">
        <div class="m-3">
        <label for="Input0" class="form-label d-flex justify-content-center">Id</label>
        <input readonly type="rented_car_id" class="form-control form-control-lg" name="rented_car_id" value="{{rented_car_id}}">
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Id Працівника</label>
        <input readonly type="staff_id" class="form-control form-control-lg" name="staff_id" value="{{staff_id}}">
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Номер авто</label>
        <input readonly type="plate_number" class="form-control form-control-lg" name="plate_number" value="{{plate_number}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Номер водійського посвідчення</label>
        <input readonly type="customer_id" class="form-control form-control-lg" name="customer_id" value="{{customer_id}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Дата оренди</label>
        <input readonly type="rent_date" class="form-control form-control-lg" name="rent_date" value="{{rent_date}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Дата повернення</label>
        <input readonly type="return_date" class="form-control form-control-lg" name="return_date" value="{{return_date}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Повернено</label>
        <input readonly type="returned" class="form-control form-control-lg" name="returned" value="{{returned}}">
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Коментар</label>
        <input readonly type="comment" class="form-control form-control-lg" name="comment" value="{{comment}}">
        </div>
    </div>
    {{/with}}
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
