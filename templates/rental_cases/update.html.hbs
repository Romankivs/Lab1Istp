<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/public/add.css" rel="stylesheet">
    <title>Car Rental</title>
  </head>
  <body>
    {{> nav user}}
    {{#with data}}
    <form action="/rental_cases/{{rented_car_id}}" method="post" class="form-add">
        <input type="hidden" name="_method" value="PUT">
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Staff Id</label>
        <select type="staff_id" name="staff_id" class="form-select form-select-lg" aria-label="Select Staff Id">
        {{/with}}
        {{#each staff}}
          <option {{#if (eq staff_id ../data.staff_id)}}selected{{/if}} value={{staff_id}}>
              {{staff_id}} {{first_name}} {{last_name}}
          </option>
        {{/each}}
        {{#with data}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Plate Number</label>
        <select type="plate_number" name="plate_number" class="form-select form-select-lg" aria-label="Select Car Plate Number">
        {{/with}}
        {{#each cars}}
          <option {{#if (eq plate_number ../data.plate_number)}}selected{{/if}} value={{plate_number}}>
              {{plate_number}}
          </option>
        {{/each}}
        {{#with data}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input2" class="form-label d-flex justify-content-center">Driver License Id</label>
        <select type="customer_id" name="customer_id" class="form-select form-select-lg" aria-label="Driver License Id">
        {{/with}}
        {{#each customers}}
          <option {{#if (eq driver_license_id ../data.driver_license_id)}}selected{{/if}} value={{driver_license_id}}>
              {{driver_license_id}}
          </option>
        {{/each}}
        {{#with data}}
        </select>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Rent Date</label>
        <input type="rent_date" class="form-control form-control-lg" name="rent_date" value={{rent_date}}>
        </div>
        <div class="m-3">
        <label for="Input3" class="form-label d-flex justify-content-center">Return date</label>
        <input type="return_date" class="form-control form-control-lg" name="return_date" value={{return_date}}>
        </div>
        <div class="form-check m-3 d-flex justify-content-center">
          <input class="form-check-input" type="checkbox" name="returned" value={{returned}} id="flexCheckChecked" checked>
            <label class="form-check-label mx-1" for="flexCheckChecked"> Returned</label>
        </div>
        <div class="m-3">
        <label for="Input1" class="form-label d-flex justify-content-center">Comment</label>
        <input type="comment" class="form-control form-control-lg" name="comment" value={{comment}}>
        </div>
        <div class="m-4 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        {{/with}}
    </form>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
